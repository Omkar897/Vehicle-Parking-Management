{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd pms && ./mvnw clean package -DskipTests",
    "runCommand": "cd pms && java -jar target/*.jar"
  },
  "deploy": {
    "startCommand": "cd pms && java -jar target/*.jar",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
